#!/usr/bin/env node

var time = require('es5-ext/lib/Date/get-format')('%m-%d.%H:%M:%S.%L')
	.call(new Date())
  , root = process.cwd()
  , command = 'node node_modules/forever/bin/forever start '
	+ '--logFile ' + root + '/log/' + time + '.log '
	+ '--outFile ' + root + '/log/' + time + '.out.log '
	+ '--errFile ' + root + '/log/' + time + '.err.log '
	+ 'lib/server/server.js';

require('child_process').exec(command, { env: process.env },
	function (error, out, err) {
		if (error) {
			console.error(error);
		}
		process.stdout.write(out);
		process.stderr.write(err);
	});
