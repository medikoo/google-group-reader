#!/usr/bin/env node

var command = 'node node_modules/forever/bin/forever stop ' + process.cwd() + '/lib/server/server.js';

require('child_process').exec(command, { env: process.env },
	function (error, out, err) {
		if (error) {
			console.error(error);
		}
		process.stdout.write(out);
		process.stderr.write(err);
	});
